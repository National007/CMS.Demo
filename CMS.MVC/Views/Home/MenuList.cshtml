@{
    ViewBag.Title = "菜单列表";
}
<style>
    .btn-sm, .btn-group-sm > .btn {
        padding: 5px 10px;
        font-size: 12px;
        line-height: 1.5;
        border-radius: 3px;
    }
    .btn-primary {
        color: #fff;
        background-color: #337ab7;
        border-color: #2e6da4;
    }
    .btn-success {
        color: #fff;
        background-color: #5cb85c;
        border-color: #4cae4c;
    }
    .btn-danger {
        color: #fff;
        background-color: #d9534f;
        border-color: #d43f3a;
    }
    .btn {
        display: inline-block;
        margin-bottom: 0;
        font-weight: normal;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        touch-action: manipulation;
        cursor: pointer;
        user-select: none;
        background-image: none;
        border: 1px solid transparent;
    }
</style>
<!--左侧开始-->
<div class="layui-col-md2">
    <blockquote class="layui-elem-quote">
        <button class="btn btn-sm btn-primary open_all">展开列表</button>
        <button class="btn btn-success btn-sm del-left-tree">更新列表</button>
        <button class="btn btn-sm btn-danger ml-5 isDelete disabled" disabled="" data-type="del">删除</button>
    </blockquote>
    <div class="layui-collapse">
        <div class="layui-colla-item">
            <h2 class="layui-colla-title menu-top" style="padding:0;text-align:center;height:39px;line-height:39px;">顶级菜单</h2>
            <div class="layui-colla-content layui-show">
                <div class="input-search mb-10">
                    <input type="text" class="layui-input layui-input-sm" style="border-radius: 15px;" id="jstree_left_search" name="jstree_left_search" placeholder="快速查找...">
                </div>
                <div class="phptwo-left-tree" id="menuLfetTree">

                </div>
            </div>
        </div>
    </div>
</div>
<!--左侧结束-->
